@model TorneoEjercicio.Data.EF.Torneo;

<h1 class="text-center">Ingrese un nuevo torneo</h1>
<div class="text-center">

<form action="/TorneoEjercicio/GrabarTorneo" method="post">
    <input type="hidden" name="Id" />
    <div class="mt-3">
        Nombre torneo: <input type="text" name="Nombre" />
    </div>
    <div class="mt-3">
        Cantidad Participantes: <input type="number" name="CantidadParticipantes" />
    </div>
    <div class="mt-3">
        <input class="btn btn-secondary" type="submit" value="Grabar torneo"/>
    </div>
</form>
</div>